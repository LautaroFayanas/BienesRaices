extends ../layout/index

block contenido 
    div.py-1
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores  
            div(class='max-w-md mx-auto my-10')
                each errors in errores
                    p.text-white.uppercase.text-xs.text-center.p-1.mb-2.font-bold.bg-red-800= errors.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' acction='/auth/registro' noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='nombre') Tu nombre
                        input#nombre.w-full.px-2.py-1.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu Nombre' type='text' name='nombre' value=usuario ? usuario.nombre : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='email') Email de Registro
                        input#email.w-full.px-2.py-1.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu Email' type='email' name='email' value=usuario ? usuario.email : '')
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Password
                        input#password.w-full.px-2.py-1.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu password' type='password' name='password' )
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='repetir_password') Repetir Password
                        input#repetir_password.w-full.px-2.py-1.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Repite tu Password' type='password' name='repetir_password')
                    
                    div.flex.items-center.justify-between 
                        a.text-gray-500.text-xs(href='/auth/login') Iniciar sesion con mi Cuenta  
                        a.text-gray-500.text-xs(href='/auth/olvide-password') Olvide mi password 

                    input(class='w-full bg-indigo-500 hover:bg-indigo-700 text-white rounded-lg font-bold py-3 cursor-pointer' type="submit" value='Crear Cuenta')