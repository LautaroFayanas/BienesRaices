extends ../layout/index

block contenido 
    div.py-1
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores  
            div(class='max-w-md mx-auto my-10')
                each errors in errores
                    p.text-white.uppercase.text-xs.text-center.p-1.mb-2.font-bold.bg-red-600= errors.msg

        div.mt-8.mx-auto.max-w-md
            div.bg-white.py-8.px-4.shadow
                form.space-y-5(method='POST' noValidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for='password') Nuevo Password
                        input#password.w-full.px-2.py-1.border.border-gray-300.rounded-lg.placeholder-gray-400(placeholder='Tu nuevo password' type='password' name='password')

                    input(class='w-full bg-indigo-500 hover:bg-indigo-700 text-white rounded-lg font-bold py-3 cursor-pointer' type="submit" value='Guardar password')  